<script>
  // Animated network graph for hero background
  (function() {
    const prefersReduced = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
    if (prefersReduced) return;

    const canvas = document.getElementById('heroNetwork') as HTMLCanvasElement;
    if (!canvas) return;
    const ctx = canvas.getContext('2d');
    if (!ctx) return;

    let w: number, h: number;
    const dpr = Math.min(window.devicePixelRatio || 1, 2);
    const CONNECT_DIST = 180;
    const NODE_COUNT = 60;

    interface Node {
      x: number; y: number;
      vx: number; vy: number;
      r: number; alpha: number;
    }

    interface Pulse {
      fromIdx: number; toIdx: number;
      t: number; speed: number;
    }

    let nodes: Node[] = [];
    let pulses: Pulse[] = [];

    function resize() {
      const rect = canvas.parentElement!.getBoundingClientRect();
      w = rect.width;
      h = rect.height;
      canvas.width = w * dpr;
      canvas.height = h * dpr;
      canvas.style.width = w + 'px';
      canvas.style.height = h + 'px';
      ctx!.setTransform(dpr, 0, 0, dpr, 0, 0);
    }

    function init() {
      resize();
      nodes = [];
      for (let i = 0; i < NODE_COUNT; i++) {
        nodes.push({
          x: Math.random() * w,
          y: Math.random() * h,
          vx: (Math.random() - 0.5) * 0.6,
          vy: (Math.random() - 0.5) * 0.6,
          r: Math.random() * 2 + 1,
          alpha: Math.random() * 0.5 + 0.2,
        });
      }
    }

    function spawnPulse() {
      if (pulses.length > 12) return;
      const i = Math.floor(Math.random() * nodes.length);
      // find a nearby node
      for (let j = 0; j < nodes.length; j++) {
        if (j === i) continue;
        const dx = nodes[i].x - nodes[j].x;
        const dy = nodes[i].y - nodes[j].y;
        if (Math.sqrt(dx * dx + dy * dy) < CONNECT_DIST) {
          pulses.push({ fromIdx: i, toIdx: j, t: 0, speed: 0.02 + Math.random() * 0.03 });
          return;
        }
      }
    }

    let frame = 0;
    function draw() {
      ctx!.clearRect(0, 0, w, h);
      frame++;

      // Move nodes
      for (const n of nodes) {
        n.x += n.vx;
        n.y += n.vy;
        if (n.x < -20) n.x = w + 20;
        if (n.x > w + 20) n.x = -20;
        if (n.y < -20) n.y = h + 20;
        if (n.y > h + 20) n.y = -20;
      }

      // Draw connections
      for (let i = 0; i < nodes.length; i++) {
        for (let j = i + 1; j < nodes.length; j++) {
          const dx = nodes[i].x - nodes[j].x;
          const dy = nodes[i].y - nodes[j].y;
          const dist = Math.sqrt(dx * dx + dy * dy);
          if (dist < CONNECT_DIST) {
            const opacity = (1 - dist / CONNECT_DIST) * 0.15;
            ctx!.beginPath();
            ctx!.moveTo(nodes[i].x, nodes[i].y);
            ctx!.lineTo(nodes[j].x, nodes[j].y);
            ctx!.strokeStyle = `rgba(192, 132, 252, ${opacity})`;
            ctx!.lineWidth = 0.5;
            ctx!.stroke();
          }
        }
      }

      // Draw nodes
      for (const n of nodes) {
        ctx!.beginPath();
        ctx!.arc(n.x, n.y, n.r, 0, Math.PI * 2);
        ctx!.fillStyle = `rgba(255, 255, 255, ${n.alpha})`;
        ctx!.fill();
      }

      // Spawn & draw pulses (fast particles along edges)
      if (frame % 20 === 0) spawnPulse();

      for (let p = pulses.length - 1; p >= 0; p--) {
        const pulse = pulses[p];
        pulse.t += pulse.speed;
        if (pulse.t > 1) {
          pulses.splice(p, 1);
          continue;
        }
        const a = nodes[pulse.fromIdx];
        const b = nodes[pulse.toIdx];
        const px = a.x + (b.x - a.x) * pulse.t;
        const py = a.y + (b.y - a.y) * pulse.t;
        const glow = Math.sin(pulse.t * Math.PI);

        ctx!.beginPath();
        ctx!.arc(px, py, 2.5, 0, Math.PI * 2);
        ctx!.fillStyle = `rgba(192, 132, 252, ${glow * 0.9})`;
        ctx!.fill();

        // Glow halo
        ctx!.beginPath();
        ctx!.arc(px, py, 6, 0, Math.PI * 2);
        ctx!.fillStyle = `rgba(192, 132, 252, ${glow * 0.15})`;
        ctx!.fill();
      }

      requestAnimationFrame(draw);
    }

    init();
    draw();
    window.addEventListener('resize', () => { resize(); });
  })();
</script>
