      <line x1="200" y1="450" x2="480" y2="520" class="net-line nl-5" />
      <line x1="480" y1="520" x2="720" y2="420" class="net-line nl-6" />
      <line x1="720" y1="420" x2="980" y2="550" class="net-line nl-7" />
      <line x1="340" y1="280" x2="480" y2="520" class="net-line nl-8" />
      <line x1="580" y1="180" x2="720" y2="420" class="net-line nl-9" />
      <line x1="820" y1="350" x2="980" y2="550" class="net-line nl-10" />
      <!-- Nodes -->
      <circle cx="100" cy="120" r="4" class="net-node nn-1" />
