</section>

<style>
  .preview {
    padding: 120px 24px;
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
    overflow: hidden;
  }

  /* ── Network Connection Lines ── */
  .network-bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 0;
  }

  .network-svg {
    width: 100%;
    height: 100%;
    position: absolute;
    inset: 0;
  }

  .net-line {
    stroke: rgba(107, 45, 139, 0.08);
    stroke-width: 1;
    stroke-dasharray: 6 8;
  }

  .net-node {
    fill: rgba(139, 77, 171, 0.15);
  }

  @media (prefers-reduced-motion: no-preference) {
    .net-line {
      animation: dashScroll 12s linear infinite;
    }
    .nl-1  { animation-delay: 0s; }
    .nl-2  { animation-delay: -1.5s; }
    .nl-3  { animation-delay: -3s; }
    .nl-4  { animation-delay: -4.5s; }
    .nl-5  { animation-delay: -6s; }
    .nl-6  { animation-delay: -7.5s; }
    .nl-7  { animation-delay: -9s; }
    .nl-8  { animation-delay: -2s; }
    .nl-9  { animation-delay: -5s; }
    .nl-10 { animation-delay: -8s; }

    .net-node {
      animation: nodePulse 4s ease-in-out infinite;
    }
    .nn-1 { animation-delay: 0s; }
    .nn-2 { animation-delay: -0.5s; }
    .nn-3 { animation-delay: -1s; }
    .nn-4 { animation-delay: -1.5s; }
    .nn-5 { animation-delay: -2s; }
    .nn-6 { animation-delay: -2.5s; }
    .nn-7 { animation-delay: -3s; }
    .nn-8 { animation-delay: -3.5s; }
    .nn-9 { animation-delay: -0.8s; }
  }

  @keyframes dashScroll {
    0% { stroke-dashoffset: 0; }
    100% { stroke-dashoffset: -56; }
  }

  @keyframes nodePulse {
    0%, 100% {
      opacity: 0.3;
      r: inherit;
    }
    50% {
      opacity: 0.7;
      fill: rgba(192, 132, 252, 0.3);
    }
  }

  .preview-inner {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: center;
    position: relative;
    z-index: 1;
  }

  .preview-text h2 {
    font-family: var(--sans);
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 800;
    font-style: normal;
    letter-spacing: -0.02em;
    margin-bottom: 16px;
  }

  .preview-text h2 em {
    font-family: var(--display);
    font-weight: 400;
    font-style: italic;
    color: var(--plum);
  }

  .preview-text p {
    font-size: 1.063rem;
    color: var(--text-secondary);
    line-height: 1.7;
    margin-bottom: 32px;
  }

  .preview-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 14px;
  }

  .preview-list li {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    font-size: 0.975rem;
    color: var(--text);
    font-weight: 500;
  }

  .preview-list li svg {
    flex-shrink: 0;
    color: var(--plum);
    margin-top: 2px;
  }

  .preview-code pre {
    margin: 0;
    white-space: pre;
  }

  .preview-code code {
    font-family: var(--mono);
    font-size: 0.813rem;
    line-height: 1.9;
  }

  .t-cmd { color: #fff; font-weight: 600; }
  .t-plum { color: #C084FC; }
  .t-green { color: #4ADE80; }
  .t-white { color: #E4E4E7; }
  .t-muted { color: #52525B; }

  @media (max-width: 900px) {
    .preview-inner {
      grid-template-columns: 1fr;
      gap: 48px;
    }

    .preview-code {
      order: -1;
    }
  }
</style>
